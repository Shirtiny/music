{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "test",
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**"
      ]
    },
    "test": {
      "dependsOn": [
        "lint"
      ]
    },
    "lint": {
      "outputs": []
    }
  }
}